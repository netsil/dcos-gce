{
  "variables": {
    "image_name": "dcos-bootstrap",
    "ssh_user": "centos",
    "ssh_pass": null
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "~/credentials/account.json",
      "project_id": "netsil-dev",
      "source_image": "centos-7-v20170829",
      "ssh_username": "{{user `ssh_user`}}",
      "zone": "us-west1-b",
      "image_name": "{{user `image_name`}}-{{ timestamp }}",
      "image_description": "DCOS bootstrap image"
    },
  ],
  "provisioners": [
    {
      "type": "file",
      "destination": "/usr/lib/systemd/system/docker.service",
      "source": "./docker.service",
    },
    {
      "type": "file",
      "destination": "/etc/selinux/config",
      "source": "./selinux-config",
    },
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ]
}
